<?xml version='1.0' encoding='ISO-8859-1' ?>
<!-- <!DOCTYPE Uintah_specification SYSTEM "input.dtd"> -->
<!-- @version: Updated 7/31/00-->
<Uintah_specification>

  <Meta>
    <title>Basic peridynamics tester</title>
  </Meta>

  <SimulationComponent type="peridynamics" />

  <Grid>
    <BoundaryConditions>
      <Face side = "x-">
        <BCType id = "all" var = "symmetry" label = "Symmetric"> </BCType>
      </Face>
      <Face side = "x+">
        <BCType id = "all" var = "symmetry" label = "Symmetric"> </BCType>
      </Face>
      <Face side = "y-">
        <BCType id = "all" var = "symmetry" label = "Symmetric"> </BCType>
      </Face>                  
      <Face side = "y+">
        <BCType id = "all" var = "symmetry" label = "Symmetric"> </BCType>
      </Face>                  
      <Face side = "z-">
        <BCType id = "all" var = "symmetry" label = "Symmetric"> </BCType>
      </Face>                  
      <Face side = "z+">
        <BCType id = "all" var = "symmetry" label = "Symmetric"> </BCType>
      </Face>                   
    </BoundaryConditions>
    <Level>
      <Box label = "1">
        <lower>[0.0,0.0,0.0]</lower>
        <upper>[.02,.02,0.03]</upper>
        <resolution>[2,2,3]</resolution>
        <patches>[1,1,1]</patches>
        <extraCells>[1,1,1]</extraCells>
      </Box>
    </Level>
  </Grid>

  <Time>
    <maxTime>  0.004  </maxTime>
    <initTime> 0.0    </initTime>
    <delt_min> 1.0e-6 </delt_min>
    <delt_max> 2.0e-2 </delt_max>
    <timestep_multiplier> 0.4 </timestep_multiplier>
  </Time>

  <DataArchiver>
    <filebase> test_peri_simple.uda </filebase>
    <outputInterval> 1.0e-4 </outputInterval>
    <save label = "pd.position"/>
    <save label = "pd.stress"/>
    <save label = "pd.damage"/>
    <save label = "pd.particleID"/>
    <checkpoint cycle = "2" interval = "0.1"/>
  </DataArchiver>

  <!-- These are initialized in PeridynamicsFlags.cc -->
  <Peridynamics>
    <gravity>[0,0,0]</gravity>
    <time_integrator> forward_euler </time_integrator>
    <num_cells_in_horizon> 2 </num_cells_in_horizon>
  </Peridynamics>

  <!-- These are found in Peridynamics.cc/SerialMPM.cc etc -->
  <MaterialProperties>
    <Peridynamics>
       <material>
         <density>2000.0</density>
           <material_model type="elastic_neo_hookean_state">
             <shear_modulus>3.52e9</shear_modulus>
             <bulk_modulus>8.9e9</bulk_modulus>
           </material_model>
           <damage_model type="spherical_strain_energy">
             <G_Ic>10000</G_Ic>
           </damage_model>
           <geom_object>
             <box label = "piston">
               <min>[ 0.0,  0.0, 0.01]</min>
               <max>[0.01, 0.01, 0.02]</max>
             </box>
             <res>[1, 1, 1]</res>
             <velocity>[0.0, 0.0, 0.01]</velocity>
             <temperature>300</temperature>
           </geom_object>
       </material>
    </Peridynamics>
  </MaterialProperties>
       
</Uintah_specification>

